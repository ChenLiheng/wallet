<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/create_wallet_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创建钱包" />

        <EditText
            android:id="@+id/mnemonic_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入助记词"/>
        <Button
            android:id="@+id/import_wallet_mnemonic_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="助记词导入"/>

        <EditText
            android:id="@+id/pkey_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入私钥"/>
        <Button
            android:id="@+id/import_wallet_pkey_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="私钥导入"/>

        <EditText
            android:id="@+id/ketstore_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入KeyStore"/>
        <Button
            android:id="@+id/import_wallet_ketstore_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KeyStore导入"/>
    </LinearLayout>
</ScrollView>
